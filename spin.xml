<ModulePrefs title="Spin the wheel">
  <Require feature="rpc" />
  <Require feature="views" />
  <Require feature="locked-domain" />
</ModulePrefs>
<Content type="html"><![CDATA[     

<html>
<head>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"></script>
<script type="text/javascript" src="https://hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.4"></script>
<script type="text/javascript" src="https://rawgithub.com/octachrome/hangout-for-teams/master/spin.js"></script>
<style type="text/css">
p, div {
	font-family: Verdana, Geneva, sans-serif;
}
h3.hft {
	margin-top: 10px;
	text-align: center;
}
div.machine {
	width: 242px;
	height: 345px;
	background-image: url(https://rawgithub.com/octachrome/hangout-for-teams/master/slot2.png);
	position: relative;
	cursor: pointer;
	margin: 0 auto;
}
div.slot {
	top: 109px;
	left: 27px;
	width: 143px;
	height: 92px;
	overflow: hidden;
	position: relative;
}
div.container {
	position: relative;
}
div.participant {
	width: 143px;
	height: 20px;
	text-align: center;
	padding: 3px;
	overflow: hidden;
}
div.spun {
	color: grey;
}
</style>
</head>
<body>
<h3 class="hft">Click to spin the wheel</h3>
<div class="machine" title="Click me">
<div class="slot">
<div class="container"></div>
</div>
</div>
</body>
</html>
]]>
</Content>
</Module>
